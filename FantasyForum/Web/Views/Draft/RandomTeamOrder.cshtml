@model List<Web.Models.UserMatch>

    ViewBag.Title = "WWF No Mercy Draft Pick Generator";
}
<div class="container">
    <h2>WWF No Mercy Draft Generator</h2>
    <p>
        This is the random list generated by the system.  Feel free to reload the page for different results.
    </p>
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Bio</td>
                    <td>Wrestler</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var userMatch in Model)
                {
                    <tr>
                        <td width="100" height="100">
                            <h2>@userMatch.User.Name</h2>
                            <a href="@userMatch.User.PictureUrl" target="_blank">
                                <img class="img-responsive" src="@userMatch.User.PictureUrl" alt="...">
                            </a>
                        </td>
                        <td>
                            @userMatch.User.Bio
                        </td>
                        <td>
                            <h2>@userMatch.Wrestler.Name</h2>
                            <a href="@userMatch.Wrestler.PictureUrl" target="_blank">
                                <img class="img-responsive" src="@userMatch.Wrestler.PictureUrl" alt="...">
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no users on our site, whoops.</p>
    }
</div>

@section scripts
{
   
    <script type="text/javascript">
        $(document).ready(function () {
            //main animate loop function
            var animateLoop = function () {
                if (loopCount >= loopCounter) {
                    $("#listItem-" + listLoopCounter).fadeOut('fast',
                        function () {
                            setListItemInfo(teamList[loopCounter % teamList.length], listLoopCounter);
                            $("#listItem-" + listLoopCounter).fadeIn('fast',
                                function () {
                                    loopCounter++;
                                    animateLoop();
                                });
                        });
                } else {
                    removeListItem();
                    listLoopCounter++;
                    loopCounter = 0;
                    generateList();
                }
            }

            //generate List Function
            var generateList = function () {
                loopCount = getRandomNumber(teamList.length);
                if (listLoopCount !== listLoopCounter) {
                    $("#listItem-" + listLoopCounter).slideDown('slow',
                        function () {
                            animateLoop(function () {
                            });
                        });
                } else {
                    $("#generateShit").prop("disabled", false);
                }
            };

            //On button click function
            $("#generateShit").on("click",
                function () {
                    $("#generateShit").prop("disabled", true);
                    //set up variables
                    teamList = getTeamList();
                    listLoopCount = teamList.length;
                    loopCounter = 0;
                    listLoopCounter = 0;

                    //empty listitems div
                    $("#listItems").empty();
                    for (var i = 0; i < teamList.length; i++) {
                        var emptyListItem = {
                            id: 0,
                            name: '',
                            pictureUrl: '',
                            orderNumber: 0,
                            description: ""
                        };
                        addListItem(emptyListItem, i);
                    }

                    generateList();
                });
        });
    </script>
}
    